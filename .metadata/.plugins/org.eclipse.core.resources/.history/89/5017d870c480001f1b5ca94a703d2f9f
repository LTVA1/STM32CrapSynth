#include "stm32f3xx.h"

void rtc_init()
{
	RTC->WPR = 0xCA;
	RTC->WPR = 0x53;

	RTC->CR &= RTC_CR_WUTE;

	while(!(RTC->ISR & RTC_ISR_WUTWF)) {}

	RTC->CR &= RTC_CR_WUCKSEL;
	RTC->CR |= RTC_CR_WUCKSEL_2;
	RTC->CR |= RTC_CR_WUTIE;

	//RTC->CR |= RTC_CR_WUTE;
}
